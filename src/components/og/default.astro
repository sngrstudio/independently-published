---
import type { CollectionEntry } from 'astro:content'

interface Props {
  site: CollectionEntry<'site'>
}

const { site } = Astro.props
---

<div
  style='display: flex; height: 630px; width: 1200px; flex-direction: column; background-color: #fafafa; padding: 2rem; font-family: "Inter"; color: #09090b; box-sizing: border-box;'
>
  <div
    style='display: flex; flex: 1; flex-direction: column; align-items: center; justify-content: center;'
  >
    <img
      style='margin-bottom: 2rem;'
      src={`${import.meta.env.SITE}${site.data.favicon}`}
      width={120}
      height={120}
      alt=''
    />
    <div
      style='text-align: center; font-size: 5rem; font-weight: 700; margin-bottom: 1rem;'
    >
      {site.data.title}
    </div>
    <div style='text-align: center; font-size: 1.75rem; color: #71717a;'>
      {site.data.description}
    </div>
  </div>
</div>

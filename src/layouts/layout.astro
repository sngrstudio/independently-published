---
import BaseLayout, { type Props as BaseLayoutProps } from './base.astro'
import Meta, { type Props as MetaProps } from './meta.astro'
import Header, {
  type Props as HeaderProps
} from '~/components/header/header.astro'
import { getEntry } from 'astro:content'
import './global.css'

export interface Props
  extends BaseLayoutProps,
    Omit<MetaProps, 'site'>,
    Omit<HeaderProps, 'site'> {}

const {
  title,
  description,
  canonical,
  image,
  class: className,
  ...props
} = Astro.props
const site = await getEntry('site', 'site')
if (!site) {
  throw new Error('Site entry not found')
}
---

<BaseLayout
  {...props}
  class:list={['min-h-screen bg-neutral-50 text-neutral-950', className]}
>
  {/* <body> */}
  <Header image={image} site={site} />
  <slot />

  {/* <head> */}
  <Fragment slot='head'>
    <Meta
      title={title}
      description={description}
      canonical={canonical}
      site={site}
    />
    <slot name='head' />
  </Fragment>
</BaseLayout>
